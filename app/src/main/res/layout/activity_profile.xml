<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_2"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="87dp"

        android:fontFamily="@font/montserrat_regular"
        android:text="профиль"
        android:gravity="center"

        android:textColor="#BDCDFF"


        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/menu"

        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginStart="14dp"/>
        />

    <include
        android:id="@+id/menu_layout"
        layout="@layout/side_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/menu_color"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatarImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@android:color/darker_gray"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_avatar_placeholder"
            app:shapeAppearanceOverlay="@style/CircleImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            android:text="ivanov@email.com"
            android:textSize="24sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/edit_person_name"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="48dp"

        android:background="@drawable/editttext_bg"

        android:fontFamily="@font/montserrat_regular"
        android:gravity="end"
        android:padding="20dp"
        android:text="Иванов Иван"
        android:textColor="@color/black"

        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_person_logo"
        app:layout_constraintBottom_toBottomOf="@+id/edit_person_name"
        app:layout_constraintStart_toStartOf="@+id/edit_person_name"
        app:layout_constraintTop_toTopOf="@+id/edit_person_name" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_person_name">

        <Button
            android:id="@+id/btn_set_male"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:backgroundTint="@color/button_pressed_color"
            android:fontFamily="@font/montserrat_regular"
            android:text="Мужчина"
            android:textColor="@color/black"

            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_set_female"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:backgroundTint="@color/button_unpressed_color"
            android:fontFamily="@font/montserrat_regular"
            android:text="Женщина"
            android:textColor="@color/black"

            android:textSize="17sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/edit_birthday"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="33dp"

        android:background="@drawable/editttext_bg"

        android:fontFamily="@font/montserrat_regular"
        android:gravity="end"
        android:padding="20dp"
        android:text="*__.__.____*"
        android:textColor="@color/black"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_birthday"

        android:layout_marginLeft="15dp"

        app:layout_constraintBottom_toBottomOf="@+id/edit_birthday"
        app:layout_constraintStart_toStartOf="@+id/edit_birthday"
        app:layout_constraintTop_toTopOf="@+id/edit_birthday" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"

        android:layout_marginTop="33dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_birthday">

        <EditText
            id="@+id/edit_height"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"

            android:background="@drawable/editttext_bg"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="end"
            android:text="180 см"
            android:textColor="@color/black"

            android:textSize="16sp" />

        <EditText
            id="@+id/edit_weight"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"

            android:background="@drawable/editttext_bg"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="end"
            android:text="80 кг"
            android:textColor="@color/black"

            android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_height"
        android:layout_marginLeft="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3" />


</androidx.constraintlayout.widget.ConstraintLayout>